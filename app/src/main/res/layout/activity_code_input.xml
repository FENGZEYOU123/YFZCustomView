<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodeInputActivity">
    <TextView
        android:id="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_width="200dp"
        android:background="#50000000"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_height="40dp">
    </TextView>
    <codeInputView.YFZCodeInputViewBasic
        android:id="@+id/CodeInputBaseView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </codeInputView.YFZCodeInputViewBasic>
    <codeInputView.YFZCodeInputViewBasic1
        android:id="@+id/CodeInputView1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CodeInputBaseView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </codeInputView.YFZCodeInputViewBasic1>
    <codeInputView.YFZCodeInputViewBasic2
        android:id="@+id/CodeInputView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CodeInputView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </codeInputView.YFZCodeInputViewBasic2>
    <codeInputView.YFZCodeInputViewBasicSlide1
        android:id="@+id/CodeInputViewSlide1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CodeInputView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </codeInputView.YFZCodeInputViewBasicSlide1>
    <codeInputView.YFZCodeInputViewBasicSlide2
        android:id="@+id/CodeInputViewSlide2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CodeInputViewSlide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </codeInputView.YFZCodeInputViewBasicSlide2>
    <codeInputView.CodeText
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </codeInputView.CodeText>
</androidx.constraintlayout.widget.ConstraintLayout>